<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="labs"
            type="com.example.abeer.quarantine.viewmodel.sampleWithDraw.ListLabName">
        </variable>
        <variable
            name="analysis"
            type="com.example.abeer.quarantine.viewmodel.sampleWithDraw.ListAnalysis">
        </variable>
        <variable
            name="IFarmPresenter"
            type="com.example.abeer.quarantine.presenter.IFarmPresenter">
        </variable>
        <variable
            name="FarmResult"
            type="com.example.abeer.quarantine.viewmodel.FarmSample"/>

        <variable
            name="FarmDataConfirm"
            type="com.example.abeer.quarantine.viewmodel.FarmDataConfirm"/>
        <variable
            name="FarmConfirmdata"
            type="com.example.abeer.quarantine.viewmodel.FarmDataConfirm"/>

        <variable
            name="FarmConfirmResult"
            type="com.example.abeer.quarantine.viewmodel.FarmConfirm"/>
        <variable
            name="ISampleFarmConfirm"
            type="com.example.abeer.quarantine.presenter.ISampleFarmConfirm"/>

    </data>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity_Farm"
    tools:showIn="@layout/app_bar_main_activity__listofchipment">

    <TextView
        android:id="@+id/title_radio_group_Sample"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/droid"
        android:gravity="center"
        android:text=" سحب عينات مزرعة"
        android:textColor="#009540"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num_sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/num_sample"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid"
            android:text="رقم طلب "
            android:textColor="#1f90a5"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:textSize="30sp" />

        <TextView
            android:id="@+id/value_sample_farm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid"
            android:gravity="center"
            android:inputType="numberSigned"
            android:layoutDirection="rtl"
            android:text=""
            android:textColor="#1f90a5"
            android:textDirection="rtl"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="833dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938">

        <LinearLayout
            android:id="@+id/LayoutResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.565">

            <LinearLayout
                android:id="@+id/linear_Layout_farm"
                android:layout_width="wrap_content"
                android:layout_height="697dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/btns_farm">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/analysis_type_title"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:fontFamily="@font/droid"
                        android:text="نوع التحليل  "
                        android:textColor="#1f90a5"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/Spinner_analysis_type"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rectshadow"
                        android:entries="@{analysis.listAnalysis}"
                        android:fontFamily="@font/droid"
                        android:onItemSelected="@{(parent,view,pos,id)->IFarmPresenter.OnItemSelectedSpinner_Treatment(parent,view,pos,id,FarmResult)}"
                        android:paddingRight="10dp"

                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/laboratory_title"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:fontFamily="@font/droid"
                        android:text="المعمل "
                        android:textColor="#1f90a5"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:textSize="30sp" />

                    <Spinner
                        android:id="@+id/Spinner_laboratory"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rectshadow"
                        android:entries="@{labs.listLabName}"
                        android:fontFamily="@font/droid"
                        android:onItemSelected="@{(parent,view,pos,id)->IFarmPresenter.OnItemSelectedSpinner_laboratory(parent,view,pos,id,FarmResult)}"
                        android:paddingRight="10dp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_SampleSize"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:fontFamily="@font/droid"
                        android:text="حجم العينة "
                        android:textColor="#1f90a5"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:textSize="30sp" />

                    <EditText
                        android:id="@+id/edit_SampleSize"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rectshadow"
                        android:fontFamily="@font/droid"
                        android:inputType="numberSigned"
                        android:paddingRight="10dp"
                        android:text="@={``+FarmResult.sampleSize}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_SampleUnderSize"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:fontFamily="@font/droid"
                        android:text="حجم تحت العينة "
                        android:textColor="#1f90a5"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:textSize="30sp" />


                    <EditText
                        android:id="@+id/edit_SampleUnderSize"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rectshadow"
                        android:fontFamily="@font/droid"
                        android:inputType="numberSigned"
                        android:paddingRight="10dp"
                        android:text="@={``+FarmResult.sampleRatio}" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="530dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/rectshadow"
                    android:ems="10"
                    android:fontFamily="@font/droid"
                    android:hint="إضافة تعليق"
                    android:inputType="textMultiLine"
                    android:paddingRight="10dp"
                    android:text="@={FarmResult.notes_Ar}"
                    android:textColorHint="#1f90a5"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:textSizeHint="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btns_farm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/Btn_Save"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btnshadow"
                    android:fontFamily="@font/droid"
                    android:onClick="@{(view)->IFarmPresenter.OnClickSaveFarm(view,FarmResult)}"
                    android:text="حفظ"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btnshadow"
                    android:fontFamily="@font/droid"
                    android:lineSpacingExtra="30sp"
                    android:onClick="@{(view)->IFarmPresenter.OnClickcancel(view,FarmResult)}"
                    android:text="إلغاء"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layoutconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.918">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/analysis_type_titleconfirm"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/droid"
                    android:text="نوع التحليل:"
                    android:textColor="#1f90a5"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/analysis_type_valueconfirm"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:text="@{FarmConfirmdata.AnalysisType}"
                    android:textColor="#1f90a5"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/laboratory_titleconfirm"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/droid"
                    android:text="المعمل:"
                    android:textColor="#1f90a5"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />

                <TextView
                    android:id="@+id/laboratory_valueconfirm"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:text="@{FarmConfirmdata.AnalysisLabType_ID}"
                    android:textColor="#1f90a5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_SampleSizeconfirm"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/droid"
                    android:text="حجم العينة:"
                    android:textColor="#1f90a5"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />

                <TextView
                    android:id="@+id/value_SampleSizeconfirm"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:text="@{FarmConfirmdata.sampleSize}"
                    android:textColor="#1f90a5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_SampleUnderSizeconfirm"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/droid"
                    android:text="حجم تحت العينة:"
                    android:textColor="#1f90a5"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />

                <TextView
                    android:id="@+id/value_SampleUnderSizeconfirm"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:text="@{FarmConfirmdata.sampleRatio}"
                    android:textColor="#1f90a5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_commentconfirm"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/droid"
                    android:text="تعليق المشرف:"
                    android:textColor="#1f90a5"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />

                <TextView
                    android:id="@+id/value_commentconfirm"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:text="@{FarmConfirmdata.notes_Ar}"
                    android:textColor="#1f90a5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:textSize="20sp" />

            </LinearLayout>
            <RadioGroup
                android:id="@+id/radio_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:visibility="visible"
                tools:ignore="MissingConstraints">

                <RadioButton
                    android:id="@+id/radio_Is_accept"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/droid"
                    android:layoutDirection="rtl"
                    android:text="أوافق"
                    android:onClick="@{(view)->ISampleFarmConfirm.OnClickRadioFarmConfirm(view,FarmConfirmResult)}"
                    android:textColor="#cd322e"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:theme="@style/confirmCheck"/>

                <RadioButton
                    android:id="@+id/radio_Is_reject"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/droid"
                    android:layoutDirection="rtl"
                    android:text="لا أوافق"
                    android:onClick="@{(view)->ISampleFarmConfirm.OnClickRadioFarmConfirm(view,FarmConfirmResult)}"
                    android:textColor="#cd322e"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:theme="@style/confirmCheck" />


            </RadioGroup>
            <EditText
                android:id="@+id/editText3"
                android:layout_width="530dp"
                android:layout_height="88dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rectshadow"
                android:ems="10"
                android:fontFamily="@font/droid"
                android:hint="إضافة تعليق"
                android:inputType="textMultiLine"
                android:paddingRight="10dp"
                android:text="@={FarmConfirmResult.Notes}"
                android:textColorHint="#1f90a5"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="16dp"
                tools:textSizeHint="30sp" />
            <!--</LinearLayout>-->
            <LinearLayout
                android:id="@+id/btns_farmconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/Btn_Saveconfirm"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btnshadow"
                    android:fontFamily="@font/droid"
                    android:onClick="@{(view)->ISampleFarmConfirm.OnClickSaveFarmConfirm(view,FarmConfirmResult)}"
                    android:text="حفظ"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />

                <Button
                    android:id="@+id/btn_cancelconfirm"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/btnshadow"
                    android:fontFamily="@font/droid"
                    android:lineSpacingExtra="30sp"
                    android:onClick="@{(view)->ISampleFarmConfirm.OnClickcancel(view,FarmConfirmResult)}"
                    android:text="إلغاء"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</layout>