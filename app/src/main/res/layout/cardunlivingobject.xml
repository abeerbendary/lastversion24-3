<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="UnLivingObjectsbinding" >
        <import type="android.view.View"/>
        <variable
            name="clicked"
            type="com.example.abeer.quarantine.presenter.ClickCustomItemData">
        </variable>
        <variable
            name="DataForCardItems"
            type="com.example.abeer.quarantine.viewmodel.DataForCardItems"/>
        <variable
            name="ISadmin"
            type="com.example.abeer.quarantine.viewmodel.Emp_Committe"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:padding="8dp"
        android:paddingBottom="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layoutDirection="rtl">
            <!--android:background="@{CheckRequest.isExport >= 1 ?(CheckRequest.isExport ==1 ?@color/Export_card_color : @color/Import_card_color) : @color/Extra_card_color }"-->
            <!---->
            <android.support.constraint.ConstraintLayout
                android:layout_width="449dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@{DataForCardItems.IsExport > 2 ?@color/Extra_card_color:(DataForCardItems.isExport ==2 ? @color/Import_card_color : @color/Export_card_color)}"
                android:layoutDirection="rtl">

                <LinearLayout
                    android:id="@+id/linearLayout32"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout33"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/droid"
                        android:text="البند الخاضع"
                        android:textColor="#1f90a5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/value_lot"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/droid"
                        android:text="@{DataForCardItems.item_Name}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout33"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/droid"
                        android:text="المطلوب"
                        android:textColor="#1f90a5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/value"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/droid"
                        android:text="@{DataForCardItems.getcounters}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout31"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <Button
                        android:id="@+id/bandconfirm"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/btnshadow"
                        android:fontFamily="@font/droid"
                        android:text="تاكيد"
                        android:onClick="@{(view)->clicked.comfirm_click(view,DataForCardItems)}"
                        android:textColor="#fff"
                        android:visibility="@{ISadmin.ISAdmin>0 ? View.GONE : (DataForCardItems.has_Result > 0 ?View.VISIBLE : View.GONE)}"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttsss"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/btnshadow"
                        android:fontFamily="@font/droid"
                        android:text="تفاصيل البند"
                        android:onClick="@{(view)->clicked.plant_click(view,DataForCardItems)}"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>